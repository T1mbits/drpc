	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'ddrpc'",
			"cargo": {
				"args": [
					"build",
					"--bin=ddrpc",
					"--package=ddrpc"
				],
				"filter": {
					"name": "ddrpc",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'ddrpc'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=ddrpc",
					"--package=ddrpc"
				],
				"filter": {
					"name": "ddrpc",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in library 'common'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--lib",
					"--package=common"
				],
				"filter": {
					"name": "common",
					"kind": "lib"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'ddrpc-daemon'",
			"cargo": {
				"args": [
					"build",
					"--bin=ddrpc-daemon",
					"--package=ddrpc-daemon"
				],
				"filter": {
					"name": "ddrpc-daemon",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'ddrpc-daemon'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=ddrpc-daemon",
					"--package=ddrpc-daemon"
				],
				"filter": {
					"name": "ddrpc-daemon",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}